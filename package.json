{
  "name": "lightspeed",
  "displayName": "Lightspeed Ai",
  "description": "Extension that is using Lightspeed AI",
  "author": "Yuval Vardi (Salesforce)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Visualization", "Extension Packs"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "LightSpeed",
      "properties": {
        "lightspeed-vscode.outputFolderName": {
          "type": "string",
          "default": "./lightspeed/vscode_ext/output",
          "description": "Where to store project files"
        },
        "lightspeed-vscode.llmKey": {
          "type": "string",
          "default": "",
          "description": "OpenAi key or any other supported LLM key"
        }
      }
    },
    "commands": [
      {
        "command": "lightspeed-vscode.copyFromEditor",
        "title": "ðŸš€ Add to Lightspeed Prompt"
      },
      {
        "command": "lightspeed-vscode.openLightspeed",
        "title": "ðŸš€ Open Lightspeed"
      },
      {
        "command": "lightspeed-vscode.submitMetadataPlan",
        "title": "ðŸš€ Analyse Metadata Depedencies plan",
        "icon":"$(folder-library)"
      },
      {
        "command": "lightspeed-vscode.createProject",
        "title": "ðŸš€ New SFDX Project"
      },
      {
        "command": "lightspeed-vscode.generateCodeFiles",
        "title": "ðŸš€ Generate Full Project Code"
      },
      {
        "command": "lightspeed-vscode.openMetadataPlan",
        "title": "Metadata Plan",
        "icon":"$(circuit-board)"
      },
      {
        "command": "lightspeed-vscode.generateCodeFromFile",
        "title": "ðŸš€ Generate Code",
        "icon": "$(debug-alt-small)"
      },
      {
        "command": "lightspeed-vscode.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "lightspeed-vscode.editItem",
        "title": "Edit",
        "icon": "$(pencil)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lightspeed-vscode",
          "title": "Lightspeed",
          "icon": "$(rocket)",
          "contextValue":"lightspeedContainer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "workbench.explorer.emptyView",
        "contents": "\n\n  ðŸš€  Use LightSpeed Ai to kick start a Salesforce Project \n[Open LightSpeed](command:lightspeed-vscode.openLightspeed)\n[New Project ](command:lightspeed-vscode.createProject)"
      }
    ],
    "views": {     
      "lightspeed-vscode": [ 
        {
          "type": "webview",
          "id": "lightspeed-vscode.view",
          "name": "LightSpeed Ai"
        },
        {
          "type": "webview",
          "id": "lightspeed-vscode.prompt",
          "name": "LightSpeed Prompt Ai"
        },
        {
          "type": "tree",
          "id": "lightspeed-vscode.filePlan",
          "name": "files Plan View",
          "when": "lightspeed-vscode.isFilePlanAvailable==true"
        },
        {
          "id": "lightspeed-vscode.depsPlan",
          "name": "Dependencies Plan",
          "when": "lightspeed-vscode.isDepsPlanAvailable==true && lightspeed-vscode.stage == depsPlan"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "lightspeed-vscode.copyFromEditor"
        }
      ],
      "webview/context": [
        {
          "command": "lightspeed-vscode.copyFromEditor",
          "when": "webviewId == lightspeed-vscode.prompt",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "lightspeed-vscode.createProject",
          "when": "view == lightspeed-vscode.view",
          "group": "navigation"
        },
        {
          "command": "lightspeed-vscode.generateCodeFiles",
          "when": "view == lightspeed-vscode.filePlan",
          "group": "group"
        },
        {
          "command": "lightspeed-vscode.submitMetadataPlan",
          "when": "view == lightspeed-vscode.filePlan",
          "group": "navigation"
        },
        {
          "command": "lightspeed-vscode.openMetadataPlan",
          "when": "view == lightspeed-vscode.depsPlan",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lightspeed-vscode.deleteItem",
          "when": "viewItem == file || viewItem == folder",
          "group": "inline"
        },
        {
          "command": "lightspeed-vscode.editItem",
          "when": "viewItem == file",
          "group": "inline"
        },
        {
          "command": "lightspeed-vscode.generateCodeFromFile",
          "when": "viewItem == file",
          "group": "inline"
        }
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.5.0"
  }
}
